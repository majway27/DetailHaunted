<% provide(:title, 'New Entry') %>
<% provide(:button_text, 'Create Transaction') %>
<h1>New Entry</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @transaction, url: new_transaction_path do |f| %>
      <%= render 'shared/error_messages_general', object: @transaction %>
    
      <%= f.label :transaction_id %>
      <%= f.number_field :transaction_id, class: 'form-control' %>
      
      <%= f.hidden_field :user_id %>
    
      <%= f.label :transaction_date %>
      <%= f.datetime_field :transaction_date, class: 'form-control' %>
    
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    
      <%= f.label :amount %>
      <%= f.number_field :amount, class: 'form-control' %>

      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
      <%= link_to 'Back', transactions_url, class: "btn-primary" %>
    <% end %>
  </div>
</div>
