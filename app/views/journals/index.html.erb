<% provide(:title, 'All Entries') %>

<h2 class="center under">All Entries</h2>

<div class="center buffer-bottom">
  <%= link_to 'New Entry', new_journal_path, class: "btn-primary" %>
  <%= link_to 'Back', root_path, class: "btn-primary" %>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Summary</th>
      <th>Entry</th>
      <th>Created</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <% @journals.each do |journal| %>
  <tr>
    <td><%= journal.summary %></td>
    <td><%= journal.entry %></td>
    <td><%= time_ago_in_words(journal.created_at) %></td>
    <td><%= link_to 'Show', journal %></td>
    <td><%= link_to 'Edit', edit_journal_path(journal) %></td>
    <td><%= link_to 'Destroy', journal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>